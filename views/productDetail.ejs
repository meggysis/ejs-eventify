<!-- views/productDetail.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title><%= product.title %> - Eventify</title>
    <link rel="stylesheet" href="/css/header.css">
    <link rel="stylesheet" href="/css/footer.css">
    <link rel="stylesheet" href="/css/productDetail.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="/css/message.css">

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lao+Muang+Khong&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Righteous&display=swap" rel="stylesheet">
</head>

<body>

<%- include('partials/header') %> <!-- Include header partial -->

<main>
    <div class="breadcrumb">
        <a href="/">Eventify</a> / <a href="#">Home</a> / <a href="#">Weddings</a> / <%= product.title %>
    </div>
    <div class="product-detail-container">
        <!-- Left Section: Thumbnails -->
        <div class="product-thumbnails">
            <% product.photos.forEach(function(photo) { %>
                <img src="<%= photo %>" alt="Thumbnail" class="thumbnail">
            <% }); %>
        </div>

        <!-- Middle Section: Main Product Image -->
        <div class="product-main-image">
            <img src="<%= product.photos[0] %>" alt="<%= product.title %>" class="product-image">
        </div>

        <!-- Right Section: Product Info -->
        <div class="product-info">
            <div class="seller-info">
                <div class="profile-info">
                    <img 
                        src="<%= (product.userId && product.userId.profilePic) ? product.userId.profilePic : '/media/images/blank-profile-picture.webp' %>" 
                        alt="Profile Picture" 
                        class="profile-pic">
                        <span class="seller-name">
                            <%= (product.userId && product.userId.name) ? product.userId.name : 'Unknown Seller' %>
                        </span>
                        <div class="product-rating-container">
                            <div class="product-rating">
                                <% for(let i = 0; i < 5; i++) { %>
                                    <i class="fas fa-star stars"></i>
                                <% } %>
                            </div>
                        </div>
                </div>
            </div>

            <h1><%= product.title %></h1>
            <p class="product-price">$<%= product.price.toFixed(2) %> <span class="original-price"><%= product.originalPrice ? '$' + product.originalPrice.toFixed(2) : '' %></span></p>
            <% if(product.brand) { %>
                <p class="product-brand">Brand: <%= product.brand %></p>
            <% } %>

            <!-- Buttons -->
            <div class="product-buttons">
                <button class="add-to-cart-btn">Add to Cart</button>
                <button id="makeOfferBtn" class="make-offer-btn">Make an Offer</button>
            </div>
            <button class="buy-now-btn">Buy Now</button>

            <!-- Like and Save Button with AJAX -->
            <div class="like-save-container">
                <% 
                    // Convert user.favorites ObjectIds to strings for accurate comparison
                    const favoriteIds = user && user.favorites ? user.favorites.map(id => id.toString()) : [];
                    const isFavorited = favoriteIds.includes(product._id.toString());
                %>
                <button id="favorite-button" class="like-save-button <%= isFavorited ? 'favorited' : '' %>" aria-label="<%= isFavorited ? 'Remove from Favorites' : 'Like it and save it for later' %>" data-listing-id="<%= product._id %>">
                    <i class="<%= isFavorited ? 'fas fa-heart' : 'far fa-heart' %>"></i> 
                    <span><%= isFavorited ? 'Remove from Favorites' : 'Like it and save it for later' %></span>
                </button>
                <input type="hidden" id="csrf-token" value="<%= csrfToken %>">
            </div>

            <!-- Product Description -->
            <p class="product-description">
                <%= product.description %>
            </p>

            <!-- Categories and Colors -->
            <div class="product-options">
                <!-- Categories Section -->
                <div class="categories">
                    <div class="option-subheading">Categories:</div>
                    <div class="option-box"><%= product.category %></div>
                </div>
                
                <!-- Colors Section -->
                <% if(product.colors && product.colors.length > 0) { %>
                    <div class="colors">
                        <div class="option-subheading">Colors:</div>
                        <div class="color-options">
                            <% product.colors.forEach(function(color) { %>
                                <label class="color-box">
                                    <input type="radio" name="color" value="<%= color %>" aria-label="<%= color %>">
                                    <span class="color-circle <%= color.toLowerCase() %>"></span>
                                    <span class="color-name"><%= color %></span>
                                </label>
                            <% }); %>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</main> 

<div id="offerModal" class="messages-container" style="display: none;">
    <div class="messages-content">
        <div class="message-thread">
            <div class="chat-header">
                Message Seller
                <span class="close-btn" id="closeModal" style="float: right; cursor: pointer;">&times;</span>
            </div>
            <div class="message-thread-content">
                <div class="message notification">Start Conversation!</div>
            </div>
            <div class="message-input">
                <form id="offerForm" action="/send-offer" method="POST">
                    <input type="hidden" name="productId" value="<%= product._id %>">
                    <textarea name="message" placeholder="Enter your offer..." required style="flex-grow: 1;"></textarea>
                    <button type="submit" class="button">Send Offer</button>
                </form>
            </div>
        </div>
    </div>
</div>


<%- include('partials/footer') %> <!-- Include footer partial -->

<script src="/js/productDetail.js"></script> 
</body>
</html>
