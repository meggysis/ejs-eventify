<!-- views/signup.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Signup - Eventify</title>
    <link rel="stylesheet" href="/css/signup.css">
</head>
<body>
    <header>
        <img src="/media/images/brandlogo.png" alt="Eventify Brand Logo" class="brand-logo">
    </header>
    
    <main>
        <div class="signup-container">
            <h1 class="signup-title">Create an Account</h1>
        
            <form action="/auth/signup" method="POST" class="signup-form">
                <input type="text" id="name" name="name" required placeholder="Full Name" value="<%= formData.name || '' %>">
                <input type="email" id="email" name="email" required placeholder="Email" value="<%= formData.email || '' %>">
                <input type="password" id="password" name="password" required placeholder="Password">
                <input type="password" id="confirmPassword" name="confirmPassword" required placeholder="Confirm Password">
                <div class="form-options">
                    <button type="submit" class="signup-btn">Sign Up</button>
                </div>
            </form>
            <p>Already have an account? <a href="/auth/login" class="login-link">Login here</a>.</p>
        </div>
    </main>
</body>
</html>
