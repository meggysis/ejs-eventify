<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Meta Tags -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Your Cart - Eventify</title>

    <!-- Stylesheets -->
    <link rel="stylesheet" href="/css/header.css" />
    <link rel="stylesheet" href="/css/footer.css" />
    <link rel="stylesheet" href="/css/cart.css" />
    <link rel="stylesheet" href="/css/cartpopup.css" /> <!-- Ensure this is included -->

    <!-- Font Awesome for Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Lao+Muang+Khong&display=swap" rel="stylesheet" />
</head>

<body>
    <%- include('partials/header') %>

    <main>
        <div class="cart-container">
            <h1>Your Cart <span class="cart-icon">ðŸ›’</span></h1>
            <div class="cart">
                <div class="item-section">
                    <div class="item-header">
                        <img src="/media/images/blank-profile-picture.webp" alt="user image" class="profile-image" />
                        <span class="username">Username</span>
                    </div>
                    <div class="item-content">
                        <div class="item-info">
                            <div class="item-image">
                                <img src="/media/images/weddingdecor.jpg" alt="Item image" />
                            </div>
                            <div class="item-details">
                                <span class="stock-info">ONLY 1 LEFT</span>
                                <h2 class="item-title">Title of the item</h2>
                                <div class="item-price">$14</div>
                            </div>
                        </div>
                        <div class="item-actions">
                            <button class="save-for-later">Save for later</button>
                            <button class="remove-item">Remove</button>
                        </div>
                        <div class="shipping-info">
                            <span>Shipping: <span class="free-shipping">FREE</span></span><br />
                            <span>Estimated Delivery: 5-8 Business Days</span>
                        </div>
                    </div>
                    <div class="item-footer">
                        <a href="#" class="contact-seller">Contact Seller</a>
                    </div>
                </div>

                <div class="payment-section">
                    <h3>Payment</h3>
                    <div class="payment-methods">
                        <label>
                            <input type="radio" name="payment" value="visa" />
                            <img src="/media/images/visa-logo.png" alt="Visa" class="payment-logo" />
                        </label>
                
                    </div>

                    <div class="price-details">
                        <div class="price-row">
                            <span>Item(s) total:</span>
                            <span class="price">$14</span>
                        </div>
                        <div class="price-row">
                            <span>Shipping:</span>
                            <span class="price">FREE</span>
                        </div>
                        <div class="price-row">
                            <span>Tax:</span>
                            <span class="price">$0</span>
                        </div>
                        <div class="price-row total">
                            <span>Total:</span>
                            <span class="price total-price">$14</span>
                        </div>
                    </div>

                    <button class="buy-now">Buy Now</button>
                </div>
                
            </div>
        </div>
    </main>

    <!-- Modal for Payment Information -->
    <div id="paymentModal" class="modal" style="display: none;">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h2>Payment Information</h2>
            <p>Please enter your card information:</p>
            <form id="paymentForm">
                <label for="cardNumber">Card Number:</label>
                <input type="text" id="cardNumber" required /><br />
                <label for="expiry">Expiry Date:</label>
                <input type="text" id="expiry" placeholder="MM/YY" required /><br />
                <label for="cvv">CVV:</label>
                <input type="text" id="cvv" required /><br />
            </form>
            <p>Are you sure you want to make this purchase?</p>
            <!-- Only this "Yes, Confirm" button is needed to confirm payment -->
            <button id="confirmPurchase">Yes, Confirm</button>
            <button id="cancelPurchase">Cancel</button>
        </div>
    </div>



    <%- include('partials/footer') %>
    <script src="/js/cartpopup.js"></script>
</body>
</html>
