<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Meta Tags -->
    <meta charset="UTF-8" /> <!-- Character encoding for the document -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" /> <!-- Responsive design for mobile devices -->
    <title>Your Cart - Eventify</title> <!-- Page title -->

    <!-- ========================= -->
    <!--        Stylesheets        -->
    <!-- ========================= -->
    <link rel="stylesheet" href="/css/header.css" /> <!-- Styles for the header -->
    <link rel="stylesheet" href="/css/footer.css" /> <!-- Styles for the footer -->
    <link rel="stylesheet" href="/css/cart.css" /> <!-- Styles for the cart page -->

    <!-- ========================= -->
    <!--   Font Awesome for Icons  -->
    <!-- ========================= -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" /> <!-- FontAwesome CDN for icons -->

    <!-- ========================= -->
    <!--        Google Fonts       -->
    <!-- ========================= -->
    <link rel="preconnect" href="https://fonts.googleapis.com" /> <!-- Preconnect for performance -->
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin /> <!-- Cross-origin preconnect for fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Lao+Muang+Khong&display=swap" rel="stylesheet" /> <!-- Import custom font -->
</head>

<body>
    <%- include('partials/header') %> <!-- Include the header partial -->

    <main>
        <div class="cart-container"> <!-- Main container for the cart -->
            <h1>Your Cart <span class="cart-icon">ðŸ›’</span></h1> <!-- Cart title with icon -->
            <div class="cart">
                <!-- ========================= -->
                <!-- Left Section (Item Details) -->
                <!-- ========================= -->
                <div class="item-section">
                    <div class="item-header">
                        <img src="/media/images/blank-profile-picture.webp" alt="user image" class="profile-image" /> <!-- User profile image -->
                        <span class="username">Username</span> <!-- Placeholder for username -->
                    </div>
                    <div class="item-content">
                        <div class="item-info">
                            <div class="item-image">
                                <img src="/media/images/weddingdecor.jpg" alt="Item image" /> <!-- Image of the item -->
                            </div>
                            <div class="item-details">
                                <span class="stock-info">ONLY 1 LEFT</span> <!-- Stock availability -->
                                <h2 class="item-title">Title of the item</h2> <!-- Title of the item -->
                                <div class="item-price">$14</div> <!-- Item price -->
                            </div>
                        </div>
                        <div class="item-actions"> <!-- Item action buttons -->
                            <button class="save-for-later">Save for later</button> <!-- Button to save item for later -->
                            <button class="remove-item">Remove</button> <!-- Button to remove item from cart -->
                        </div>
                        <div class="shipping-info"> <!-- Shipping information -->
                            <span>Shipping: <span class="free-shipping">FREE</span></span><br />
                            <span>Estimated Delivery: 5-8 Business Days</span> <!-- Delivery estimate -->
                        </div>
                    </div>
                    <div class="item-footer">
                        <a href="#" class="contact-seller">Contact Seller</a> <!-- Link to contact the seller -->
                    </div>
                </div>

                <!-- ========================= -->
                <!-- Right Section (Payment Details) -->
                <!-- ========================= -->
                <div class="payment-section">
                    <h3>Payment</h3> <!-- Payment section title -->
                    <div class="payment-methods"> <!-- Payment method options -->
                        <label>
                            <input type="radio" name="payment" value="visa" /> <!-- Visa payment option -->
                            <img src="/media/images/visa-logo.png" alt="Visa" class="payment-logo" /> <!-- Visa logo -->
                        </label>
                        <label>
                            <input type="radio" name="payment" value="mastercard" /> <!-- MasterCard payment option -->
                            <img src="/media/images/mastercard-logo.png" alt="MasterCard" class="payment-logo" /> <!-- MasterCard logo -->
                        </label>
                        <label>
                            <input type="radio" name="payment" value="paypal" /> <!-- PayPal payment option -->
                            <img src="/media/images/paypal-logo.png" alt="PayPal" class="payment-logo" /> <!-- PayPal logo -->
                        </label>
                    </div>

                    <!-- ========================= -->
                    <!--        Price Details      -->
                    <!-- ========================= -->
                    <div class="price-details">
                        <div class="price-row">
                            <span>Item(s) total:</span>
                            <span class="price">$14</span> <!-- Example price, adjust dynamically -->
                        </div>
                        <div class="price-row">
                            <span>Shipping:</span>
                            <span class="price">FREE</span> <!-- Shipping cost -->
                        </div>
                        <div class="price-row">
                            <span>Tax:</span>
                            <span class="price">$0</span> <!-- Example tax, adjust dynamically -->
                        </div>
                        <div class="price-row total">
                            <span>Total:</span>
                            <span class="price total-price">$14</span> <!-- Example total, adjust dynamically -->
                        </div>
                    </div>

                    <button class="buy-now">Buy Now</button> <!-- Buy Now button -->
                </div>
            </div>
        </div>
    </main>

    <%- include('partials/footer') %> <!-- Include the footer partial -->
</body>
</html>
