<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Your Order Activity - Eventify</title>

    <!-- ========================= -->
    <!--        CSS Files         -->
    <!-- ========================= -->
    <link rel="stylesheet" href="/css/header.css" />
    <link rel="stylesheet" href="/css/footer.css" />
    <link rel="stylesheet" href="/css/orderActivity.css" />

    <!-- FontAwesome for Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

    <!-- Google Fonts Setup -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Lao+Muang+Khong&display=swap" rel="stylesheet" />
</head>

<body>
    <%- include('partials/header') %>

    <main>
        <div class="container">
            <!-- Sidebar Navigation -->
            <nav class="sidebar">
                <h2>Order Activity</h2>
                <ul>
                    <li class="active" onclick="showPurchases()">My Purchases</li>
                    <li><a href="/helpcenter">Help Center</a></li>
                </ul>
            </nav>

            <!-- Main Order Details -->
            <div class="order-details" id="orderDetails">
                <!-- Purchases Section -->
                <div id="purchases" class="scrollable-section">
                    <h2>Your Purchases</h2> <!-- Added header here -->
                    
                    <div class="order-card">
                        <div class="order-info">
                            <img src="/media/images/weddingdecorwhite.jpg" alt="Wedding Decor White" class="order-img" />
                            <div class="order-text">
                                <h3>Order Number: 123457</h3>
                                <p>Wedding Decor White</p>
                                <p>Price: $28.00</p>
                            </div>
                        </div>
                        <div class="order-meta">
                            <p id="orderDate1">Date: 11/20/2024</p>
                            <p>Shipping: <span class="free">FREE</span></p>
                            <p>Estimated Delivery: 5-8 Business Days</p>
                            <!-- Star rating system -->
                            <div class="star-rating" onclick="openRatingPopup(1)">
                                <i class="fa fa-star" data-rating="1"></i>
                                <i class="fa fa-star" data-rating="2"></i>
                                <i class="fa fa-star" data-rating="3"></i>
                                <i class="fa fa-star" data-rating="4"></i>
                                <i class="fa fa-star" data-rating="5"></i>
                            </div>
                        </div>
                    </div>

                    <!-- Repeat Order Cards as Needed -->
                </div>

                    
                    <div class="order-card">
                        <div class="order-info">
                            <img src="/media/images/birthdayballoonscard.jpg" alt="Birthday Balloons" class="order-img" />
                            <div class="order-text">
                                <h3>Order Number: 123456</h3>
                                <p>Birthday Balloons (25 pcs)</p>
                                <p>Price: $8.00</p>
                            </div>
                        </div>
                        <div class="order-meta">
                            <p id="orderDate2">Date: 11/20/2024</p>
                            <p>Shipping: <span class="free">FREE</span></p>
                            <p>Estimated Delivery: 5-8 Business Days</p>
                            <!-- Star rating system -->
                            <div class="star-rating" onclick="openRatingPopup(1)">
                                <i class="fa fa-star" data-rating="1"></i>
                                <i class="fa fa-star" data-rating="2"></i>
                                <i class="fa fa-star" data-rating="3"></i>
                                <i class="fa fa-star" data-rating="4"></i>
                                <i class="fa fa-star" data-rating="5"></i>
                            </div>
                        </div>
                    </div>
                    <!-- Repeat Sale Cards as Needed -->
                </div>
            </div>
        </div>
    </main>

    <%- include('partials/footer') %>

    <!-- JavaScript to dynamically update the date -->
    <script>
        // Get today's date and format it as 'MM/DD/YYYY'
        const today = new Date();
        const formattedDate = today.toLocaleDateString('en-US');

        // Set the order date dynamically for orderDate2
        document.getElementById('orderDate2').innerText = `Date: ${formattedDate}`;
    </script>
</body>
</html>
