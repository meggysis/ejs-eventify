<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/header.css">
    <link rel="stylesheet" href="/css/footer.css">
    <link rel="stylesheet" href="/css/profile.css">
</head>
<body>
    <!-- Including header partials -->
    <%- include('partials/header') %>
    <main class="profile-page">
        <header class="page-header">
            <h1>Profile</h1>
        </header>
        <div class="profile-container">
            <div class="profile-info">
                <div class="profile-pic">
                    <img src="<%= user.profilePicture || '/media/images/user.png' %>" alt="Profile Picture">
                </div>
                <div class="user-details">
                    <h2><%= user.name %></h2>
                    <div class="rating">★★★★★</div>
                </div>
                <button class="settings-btn">Settings</button>
            </div>
            <div class="categories">
                <h3>Categories</h3>
                <ul>
                    <li>Holidays</li>
                    <li>Personal & Family</li>
                    <li>Color</li>
                </ul>
            </div>
        </div>
        <div class="listing-sec">
            <div class="search-sort">
                <input type="text" class="search-bar" placeholder="Search listings...">
                <div class="sort-by">
                    <label for="sort">Sort by:</label>
                    <select id="sort">
                        <option value="price">Price</option>
                        <option value="date">Date</option>
                    </select>
                </div>
            </div>
            <div class="listings">
                <% listings.forEach(listing => { %>
                    <div class="listing-card">
                        <img src="<%= listing.image || '/media/images/wedding.png' %>" alt="Listing Image">
                        <div class="listing-info">
                            <h4><%= listing.title %></h4>
                            <p>$<%= listing.price %> | Brand: None</p>
                            <div class="ratings">*****</div>
                            <a href="/listing/<%= listing._id %>">View Listing</a>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </main>
    <%- include('partials/footer') %> <!-- Include the footer partial -->
</body>
</html>
