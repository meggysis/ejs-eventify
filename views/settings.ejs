<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Settings</title>
    <link rel="stylesheet" href="/css/settings.css">
    <link rel="stylesheet" href="/css/header.css">
    <link rel="stylesheet" href="/css/footer.css">
    <style>
        .profile-photo {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            overflow: hidden;
            display: flex;
            justify-content: center;
            align-items: center;
            background: #f0f0f0;
            border: 2px solid #ddd;
            position: relative;
        }

        .profile-photo img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .upload-input {
            position: absolute;
            width: 100%;
            height: 100%;
            opacity: 0;
            cursor: pointer;
        }

        .profile-photo .photo-icon {
            font-size: 50px;
            color: #888;
            display: flex;
            justify-content: center;
            align-items: center;
        }
    </style>
</head>
<body>
    <%- include('partials/header') %>

    <div class="settings-container">
        <h2>Settings</h2>
        <div class="breadcrumb">Eventify / Settings / Edit Profile</div>

        <div class="profile-section">
            <div class="left-menu">
                <ul>
                    <li class="active">Edit Profile</li>
                    <li><a href="/helpcenter">Help Center</a></li>
                    <li><a href="/listing/drafts">My Drafts</a></li>
                </ul>
            </div>

            <div class="profile-details">
                <div class="profile-photo-banner">
                    <div class="profile-photo">
                        <!-- Display uploaded profile picture -->
                        <% if (user.profilePicture) { %>
                            <img src="/uploads/<%= user.profilePicture %>" alt="Profile Photo" />
                        <% } else { %>
                            <div class="photo-icon">ðŸ‘¤</div>
                        <% } %>

                        <!-- File upload button -->
                        <form action="/settings" method="POST" enctype="multipart/form-data">
                            <input 
                                type="file" 
                                name="profile-photo" 
                                id="profile-photo" 
                                class="upload-input" 
                                onchange="this.form.submit()" />
                        </form>
                    </div>
                </div>

                <!-- Profile Form -->
                <form class="profile-form" action="/settings" method="POST">
                    <label for="profile-name">
                        Profile Name
                        <h2><%= user.name.charAt(0).toUpperCase() + user.name.slice(1) || 'Username' %></h2>
                    </label>
                    <input id="profile-name" type="text" name="name" value="<%= user.name || 'Username' %>" />

                    <label for="email">
                        Email
                        <h2><%= user.email || 'Email' %></h2>
                    </label>
                    <input id="email" type="email" name="email" value="<%= user.email || 'Email' %>" />

                    <label for="password">New Password</label>
                    <input id="password" type="password" name="password" placeholder="Enter new password" />

                    <label for="confirm-password">Confirm Password</label>
                    <input id="confirm-password" type="password" name="confirm-password" placeholder="Confirm new password" />

                    <button class="update-btn" type="submit">Update Now</button>
                </form>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>

    <!-- Optional: Preview selected image -->
    <script>
        document.getElementById('profile-photo').addEventListener('change', function (event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    const imgElement = document.querySelector('.profile-photo img') || document.createElement('img');
                    imgElement.src = e.target.result;
                    imgElement.alt = "Profile Photo";

                    const profilePhoto = document.querySelector('.profile-photo');
                    profilePhoto.innerHTML = '';
                    profilePhoto.appendChild(imgElement);
                };
                reader.readAsDataURL(file);
            }
        });
    </script>
</body>
</html>
