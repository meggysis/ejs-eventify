<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Settings</title>
    <link rel="stylesheet" href="/css/settings.css">
    <link rel="stylesheet" href="/css/header.css">
    <link rel="stylesheet" href="/css/footer.css">
</head>
<body>
    <%- include('partials/header') %>

    <div class="settings-container">
        <h2>Settings</h2>
        <div class="breadcrumb">Eventify / Settings / Edit Profile</div>

        <div class="profile-section">
            <div class="left-menu">
                <ul>
                    <li class="active">Edit Profile</li>
                    <li><a href="/helpcenter">Help Center</a></li>
                    <li><a href="/listing/drafts">My Drafts</a></li>
                </ul>
            </div>

            <div class="profile-details">
                <div class="profile-photo-banner">
                    <div class="profile-photo">
                        <div class="photo-icon">ðŸ‘¤</div>
                        <div class="photo-upload-container">
                            <button class="upload-btn">Upload Profile Photo</button>
                        </div>
                    </div>
                    <div class="profile-banner">
                        <div class="banner-preview">Banner Image Preview</div>
                        <div class="banner-upload-container">
                            <button class="upload-btn">Upload Profile Banner</button>
                        </div>
                    </div>
                </div>

                <!-- Profile Form with Password Update Option -->
                <form class="profile-form" action="/settings" method="POST">
                    <label for="profile-name">
                        Profile Name
                        <h2><%= user.name.charAt(0).toUpperCase() + user.name.slice(1) || 'Username' %></h2>
                    </label>
                    <input id="profile-name" type="text" name="name" value="<%= user.name || 'Username' %>" />

                    <label for="email">
                        Email
                        <h2><%= user.email || 'Email' %></h2>
                    </label>
                    <input id="email" type="email" name="email" value="<%= user.email || 'Email' %>" />

                    <label for="password">New Password</label>
                    <input id="password" type="password" name="password" placeholder="Enter new password" />

                    <label for="confirm-password">Confirm Password</label>
                    <input id="confirm-password" type="password" name="confirm-password" placeholder="Confirm new password" />

                    <button class="update-btn" type="submit">Update Now</button>
                </form>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>
</body>
</html>
